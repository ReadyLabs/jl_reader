.header
  %p#title JL Reader
  - if current_user
    = link_to 'Sign Out', destroy_user_session_path, id: 'sign_out_link', method: 'delete'


.center
  / = link_to t('visitors.user_registrations.new'), new_user_registration_path

  #sign_in_form
    %h2 SIGN IN
    / = form_for(:user, :as => :user, :url => session_path(:user)) do |f|
    = form_for(User.new, :url => new_user_session_path) do |f|
      %div
        = f.label :email
        %br
        = f.email_field :email, :autofocus => true
      %div
        = f.label :password
        %br
        = f.password_field :password
      / - if devise_mapping.rememberable?
      /   %div
      /     = f.check_box :remember_me
      /     = f.label :remember_me
      %div
        = f.submit "Sign in"
      = link_to "Forgot your password?", new_user_password_path

  #sign_up_form
    %h2 SIGN UP
    = form_for(User.new, :url => user_registration_path) do |f|
      %div
        = f.label :email
        %br
        = f.email_field :email, :autofocus => true
      %div
        = f.label :password
        %br
        = f.password_field :password
      %div
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation
      %div
        = f.submit "Sign Up"


.footer